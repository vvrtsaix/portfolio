---
import { LanguageSelector } from "astro-i18next/components";
---

<LanguageSelector
  aria-label="language-selector"
  class="text-center text-xl appearance-none fixed top-5 right-24 bg-white w-[3rem] h-[3rem] bg-opacity-80 backdrop-blur-[0.5rem] border border-white border-opacity-40 shadow-2xl rounded-full flex items-center justify-center hover:scale-[1.15] active:scale-105 transition-all dark:bg-gray-950 focus:outline-black"
  languageMapping={{ en: "EN", mn: "MN" }}
/>
