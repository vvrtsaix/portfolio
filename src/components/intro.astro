---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
import { Image } from "astro:assets";
import { motion } from "framer-motion";
---

<section
  id="home"
  class="mb-28 max-w-[50rem] text-center sm:mb-0 scroll-mt-[100rem]"
>
  <div class="flex items-center justify-center">
    <div class="relative">
      <motion.div
        client:load
        initial={{ opacity: 0, scale: 0 }}
        animate={{ opacity: 1, scale: 1 }}
        transition={{
          type: "tween",
          duration: 0.2,
        }}
      >
        <Image
          width="192"
          height="192"
          alt="Uurtsaikh Nyambat"
          src="/images/profile.webp"
          class="h-24 w-24 rounded-full object-cover border-[0.35rem] border-white shadow-xl"
        />
      </motion.div>
      <motion.span
        client:load
        className="absolute bottom-0 right-0 text-4xl"
        initial={{ opacity: 0, scale: 0 }}
        animate={{ opacity: 1, scale: 1 }}
        transition={{
          type: "spring",
          stiffness: 125,
          delay: 0.1,
          duration: 0.7,
        }}
      >
        üêù
      </motion.span>
    </div>
  </div>
  <motion.h1
    client:load
    className="mb-10 mt-4 px-4 text-2xl font-medium !leading-[1.5] sm:text-4xl whitespace-pre-wrap"
    initial={{ opacity: 0, y: 100 }}
    animate={{ opacity: 1, y: 0 }}
  >
    <Trans i18nKey="hello">
      <span class="font-bold">Hello, I'm Uurtsaikh Nyambat.</span>I'm a{" "}
      <span class="font-bold">Full-stack developer and DevOps engineer</span
      >with{" "}
      <span class="font-bold">5 years</span> of experience.
    </Trans>
  </motion.h1>
  <motion.div
    client:load
    className="flex flex-col sm:flex-row items-center justify-center gap-4 px-4 text-lg font-medium"
    initial={{ opacity: 0, y: 100 }}
    animate={{ opacity: 1, y: 0 }}
    transition={{
      delay: 0.1,
    }}
  >
    <a
      href="#contact"
      class="group bg-gray-900 text-white px-7 py-3 flex items-center gap-2 rounded-full outline-none focus:scale-105 hover:scale-105 hover:bg-gray-950 active:scale-105 transition"
    >
      {t("contact-me-here")}{" "}
      <svg
        fill="none"
        stroke-width="2"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5 opacity-70 group-hover:translate-x-1 transition lucide lucide-arrow-right"
      >
        <path d="M5 12h14m-7-7 7 7-7 7"></path>
      </svg>
    </a>
    <a
      class="group bg-white px-7 py-3 flex items-center gap-2 rounded-full outline-none focus:scale-105 hover:scale-105 active:scale-105 transition cursor-pointer borderBlack dark:bg-white/10"
      href="/cv.pdf"
      download
    >
      {t("download-cv")}{" "}
      <svg
        fill="none"
        stroke-width="2"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5 opacity-60 group-hover:translate-x-1 transition lucide lucide-download-cloud"
      >
        <path
          d="M4 14.899A7 7 0 1 1 15.71 8h1.79a4.5 4.5 0 0 1 2.5 8.242M12 12v9m-4-4 4 4 4-4"
        ></path>
      </svg>
    </a>
    <a
      class="bg-white p-4 text-gray-700 flex items-center gap-2 rounded-full focus:scale-110 hover:scale-110 active:scale-105 transition cursor-pointer borderBlack dark:bg-white/10 dark:text-white/60"
      href="https://www.linkedin.com/in/uurtsaikh-nyambat"
      target="_blank"
    >
      <svg
        fill="none"
        stroke-width="2"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5 lucide lucide-linkedin"
      >
        <path
          d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6zM2 9h4v12H2z"
        ></path>
        <circle cx="4" cy="4" r="2"></circle>
      </svg>
    </a>
    <a
      class="bg-white p-4 text-gray-700 flex items-center gap-2 text-[1.35rem] rounded-full focus:scale-110 hover:scale-110 active:scale-105 transition cursor-pointer borderBlack dark:bg-white/10 dark:text-white/60"
      href="https://github.com/vvrtsaix"
      target="_blank"
    >
      <svg
        fill="none"
        stroke-width="2"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5 lucide lucide-github"
      >
        <path
          d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
        ></path>
        <path d="M9 18c-4.51 2-5-2-7-2"></path>
      </svg>
    </a>
  </motion.div>
</section>
